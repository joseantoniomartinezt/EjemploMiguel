<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true">
		<shape>
			<solid
				android:color="#fff5f5f5"/>
			<stroke
				android:width="1dp"
				android:color="#222222"/>
			<corners
				android:radius="7dp"/>
		</shape>
	</item>
	<item>
		<shape>
			<gradient
				android:startColor="#ffd1d1d1"
				android:endColor="#ffa2a2a2"
				android:angle="270"/>
			<stroke
				android:width="1dp"
				android:color="#ff575757"/>
			<corners
				android:radius="7dp"/>

		</shape>
	</item>
</selector>